<h1>Sign-up</h1>

<% if @user.errors.any? %>
  <div class="error_messages">
    <p><%= pluralize(@user.errors.count, 'error') %> prevented sign-up</p>
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label "email" %><br />
    <%= f.email_field "email" %>
  </div>
  <div class="field">
    <%= f.label "password" %><br />
    <%= f.password_field "password" %>
  </div>
  <div class="field">
    <%= f.label "password_confirmation" %><br />
    <%= f.password_field "password_confirmation" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign Up" %>
  </div>
<% end %>
